
<div class="col-md-8 col-xs-12">
<% unless @exercises.empty? %>
<h1>Listing Exercises</h1>
<table class="table table-stripped">
<thead>
	<tr>
	<th>Duration in Min</th>
	<th>Workout Details</th>
	<th>Activity Date</th>
	<th colspan="3"></th>
	</tr>
</thead>
<tbody>
<% @exercises.each do |exercise| %>
<tr>
<td><%= exercise.duration_in_min %></td>
<td><%= exercise.workout %></td>
<td><%= exercise.workout %></td>
<td>
<%= link_to "Edit", edit_user_exercise_path(current_user, exercise) %>|
<%= link_to "Show", user_exercise_path(current_user,exercise) %> | 
<%= link_to "Delete", user_exercise_path(current_user,exercise), method: :delete, data: {confirm: "are you sure?"} %>
</td>
</tr>
<% end %>	
</tbody>
</table>
<% else %>
<h2>No Exercises</h2>
<% end %>
</div>
<%= link_to "New Workout", new_user_exercise_path(current_user), class: "btn btn-primary link" %>
</div>
